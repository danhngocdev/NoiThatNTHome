        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label ">
                        Hiển thị từ
                    </label>
                    <input type="text" id="txtFromDate"  class="form-control datepicker-short" ng-model="BannerModel.FromDateStr" ng-init="DatePickerInit()">
                </div>
                <div class="col-md-6">
                    <label class="control-label ">
                        Hiển thị tới
                    </label>
                    <input type="text" id="txtUntilDate"  class="form-control datepicker-short" ng-model="BannerModel.UntilDateStr" ng-init="DatePickerInit()">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label ">
                        Trang hiển thị <span class="required">*</span>
                    </label>
                    <select required class="form-control" ng-options="option.Id as option.Name for option in ParamModel.ListPage" ng-model="BannerModel.PageId"></select>
                </div>
                <div class="col-md-4">
                    <label class="control-label">
                        Vị trí hiển thị <span class="required">*</span>
                    </label>
                    <select required class="form-control" ng-options="option.Id as option.Name for option in ParamModel.ListPosition" ng-model="BannerModel.Position"></select>
                </div>

            </div>
        </div>
    </form>
</div>
<div class="card-footer text-right">
    <button type="submit" class="btn btn-success btn-sm" ng-disabled="formUpdateBanner.$invalid" ng-if="BannerModel != null || BannerModel.Id > 0" ng-click="doUpdate()"><i class="fa fa-save"></i> Cập nhật</button>
    <button type="submit" class="btn btn-success btn-sm" ng-disabled="formUpdateBanner.$invalid" ng-if="BannerModel == null || BannerModel.Id == 0" ng-click="doUpdate()"><i class="fa fa-plus"></i> Thêm mới</button>
    <button class="btn btn-primary btn-sm" ng-click="cancelUpdate()"><i class="fa fa-close"></i> Hủy</button>
</div>
