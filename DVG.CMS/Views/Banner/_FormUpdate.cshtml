<div class="card-header">
    <strong ng-if="BannerModel.Id > 0">Cập nhật thông tin banner</strong>
    <strong ng-if="BannerModel.Id == 0 || BannerModel.Id == null">Thêm mới banner</strong>
    <div class="pull-right">
        <button type="submit" class="btn btn-success btn-sm" ng-disabled="formUpdateBanner.$invalid" ng-if="BannerModel != null || BannerModel.Id > 0" ng-click="doUpdate()"><i class="fa fa-save"></i> Cập nhật</button>
        <button type="submit" class="btn btn-success btn-sm" ng-disabled="formUpdateBanner.$invalid" ng-if="BannerModel == null || BannerModel.Id == 0" ng-click="doUpdate()"><i class="fa fa-plus"></i> Thêm mới</button>
        <button class="btn btn-primary btn-sm" ng-click="cancelUpdate()"><i class="fa fa-close"></i> Hủy</button>
    </div>
</div>
<div class="card-body">
    <form role="form" name="formUpdateBanner">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label ">
                        Tên Banner <span class="required">*</span>
                    </label>
                    <input type="text" id="txtName" required class="form-control" ng-model="BannerModel.Name">
                </div>
                <div class="col-md-6">
                    <label class="control-label ">
                        Mô tả <span class="required">*</span>
                    </label>
                    <input required type="text" id="txtTitle" class="form-control" ng-model="BannerModel.Title">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label">
                        Nền tảng <span class="required">*</span>
                    </label>
                    <select required class="form-control" ng-options="option.Id as option.Name for option in ParamModel.ListPlatform" ng-model="BannerModel.Platform"></select>
                </div>
                <div class="col-md-6">
                    <label class="control-label">
                        Trạng thái <span class="required">*</span>
                    </label>
                    <select required class="form-control" ng-options="option.Id as option.Name for option in ParamModel.ListStatus" ng-model="BannerModel.Status"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label ">
                        Link banner
                    </label>
                    <input type="text" id="txtTargetLink" class="form-control" ng-model="BannerModel.TargetLink">
                </div>
            </div>
        </div>
