@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="animated fadeIn" ng-app="Account" ng-controller="AccountController">
    <form name="formUpdate">
        <div class="row">
            <div class="col-md-3 mt-3 ml-auto mr-auto nga-fast nga-slide-down">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Đổi mật khẩu
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <input class="form-control" required="required" ng-keypress="WhenSubmitChange($event)" placeholder="Mật khẩu hiện tại" name="ChangePasswordModel.CurrentPassword" ng-model="ChangePasswordModel.CurrentPassword" autofocus="autofocus" type="password" value="" autocomplete="off" />
                        </div>
                        <div class="form-group row">
                            <input class="form-control" required="required" ng-keypress="WhenSubmitChange($event)" placeholder="Mật khẩu mới" name="ChangePasswordModel.Password" ng-model="ChangePasswordModel.Password" type="password" value="" autocomplete="off" />
                        </div>
                        <div class="form-group row">
                            <input class="form-control" required="required" ng-keypress="WhenSubmitChange($event)" placeholder="Xác nhận mật khẩu mới" name="ChangePasswordModel.ConfirmPassword" ng-model="ChangePasswordModel.ConfirmPassword" type="password" value="" autocomplete="off" />
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button type="button" class="btn btn-sm btn-success" ng-disabled="formUpdate.$invalid" ng-click="doChangePassword()"><i class="fa fa-dot-circle-o"></i> Cập nhật</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

