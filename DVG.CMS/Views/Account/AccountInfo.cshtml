@model DVG.WIS.Entities.UserLogin

@{
    Layout = null;
}
@if (null != Model)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <img src="@Model.Avatar" class="img-avatar img-avatar-circle" alt="User Image">
            }
            else
            {
                <img src="/Content/images/iconuser.png" class="img-avatar img-avatar-circle" alt="User Image">
            }
            <span class="d-md-down-none">@Model.FullName</span>
        </a>
        <div class="dropdown-menu dropdown-menu-right">
            <div class="dropdown-header text-center">
                <strong>Settings</strong>
            </div>
            <a class="dropdown-item" href="/doi-mat-khau"><i class="fa fa-shield"></i> Đổi mật khẩu</a>
            <a class="dropdown-item" href="javascript:if(confirm('Bạn có chắc chắn muốn thoát khỏi hệ thống?')) location.href='/dang-xuat'"><i class="fa fa-lock"></i> Đăng xuất</a>
        </div>
    </li>
}




