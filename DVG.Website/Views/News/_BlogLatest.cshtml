@using DVG.WIS.PublicModel;
@model List<NewsInListModel>
@{ 
    string crop = ViewBag.CropSize;
}
<!-- END -->
@if (Model != null && Model.Any())
{
    NewsInListModel itemFirst = Model[0];
    <div id="gallery" class="wow fadeInUp" data-wow-duration="1s">
        <div class="container gallery-container">
            <div class="tz-gallery">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="tzg-img">
                            <a class="lightbox" href="@itemFirst.Url" title="@itemFirst.Title">
                                <img src="@itemFirst.GetAvatar("resize/575x427/")" alt="@itemFirst.Title" class="img-responsive">
                            </a>
                        </div>
                        <div class="tzg-overlay"></div>
                        <div class="tzg-about">
                            <h2 class="about-heading f-bold">@itemFirst.Title</h2>
                            <div class="about-content">
                                <p>
                                    @itemFirst.Sapo
                                </p>
                            </div>
                            <p class="mg-top-20">
                                <a class="btn btn-lg btn-primary f-bold" title="@itemFirst.Title" href="@itemFirst.Url">@DVG.WIS.Local.Resource.ViewMore</a>
                            </p>
                        </div>
                    </div>
                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="col-sm-6 col-md-3">
                            <div class="tzg-img">
                                <a class="lightbox" href="@item.Url" title="@item.Title">
                                    <img src="@item.GetAvatar(crop)" alt="@item.Title" class="img-responsive">
                                </a>
                            </div>
                            <div class="tzg-title">
                                <div class="tzg-title-content">
                                    <h3 class="tzg-heading">
                                        <a href="@item.Url" title="@item.Title">
                                            @item.Title
                                        </a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}