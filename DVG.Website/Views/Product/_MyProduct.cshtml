@using DVG.WIS.PublicModel;
@model List<ProductFEListModel>
@{
    int i = 0;
}

@if (Model != null && Model.Any())
{
    <div id="myproduct" class="wow fadeInUp" data-wow-duration="1s">
        <div class="container">
            <div class="title-head">
                <h2 class="f-bold title-head-text">@DVG.WIS.Local.Resource.OurProducts</h2>
            </div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
                    <div class="mp-desc">
                        <p>@DVG.WIS.Local.Resource.OurProductsTitle</p>
                    </div>
                </div>
            </div>
            <div id="myproduct-slider">
                @foreach (var item in Model)
                {
                    <div class="col-xs-12">
                        <div class="product-item">
                            <div class="pi-image">
                                <a href="@item.Link" title="@item.Name">
                                    <img src="@item.GetAvatar("/crop/375x235/")" class="img-responsive" alt="@item.Name">
                                </a>
                            </div>
                            <div class="pr-content">
                                <h3 class="pr-heading f-bold">
                                    <a title="@item.Name" href="@item.Link">
                                        @item.Name
                                    </a>
                                </h3>
                                <div class="pr-desc">
                                    <p>
                                        @item.Sapo
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

